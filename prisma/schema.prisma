generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  productName        String
  productDescription String
  unitsLeft    Int
  createdAt   DateTime @default(now())
}

